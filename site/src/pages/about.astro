---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Icon } from "astro-icon/components";

const values = [
  {
    title: "Accuracy First",
    description: "Every data point we deliver is validated and structured. We don't cut corners on quality.",
    icon: "bx:bxs-lock",
  },
  {
    title: "Transparency",
    description: "Clear communication, honest timelines, and no hidden fees. You always know what you're getting.",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "Client-Driven",
    description: "Your requirements shape our process. We build solutions around your needs, not the other way around.",
    icon: "bx:bxs-user",
  },
  {
    title: "Reliability",
    description: "Consistent delivery on schedule. We treat your deadlines as our own.",
    icon: "bx:bxs-time",
  },
];

const stats = [
  { value: "50+", label: "Projects Delivered" },
  { value: "1M+", label: "Records Extracted" },
  { value: "24hr", label: "Average Response Time" },
  { value: "100%", label: "Client Satisfaction" },
];
---

<Layout title="About">
  <Container>
    <Sectionhead>
      <Fragment slot="title">About dataOps</Fragment>
      <Fragment slot="desc">Your trusted partner for web scraping, data crawling, and custom data solutions.</Fragment>
    </Sectionhead>

    <!-- Mission -->
    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="font-bold text-3xl text-gray-800">
        Turning raw web data into business intelligence.
      </h2>
      <p class="text-lg leading-relaxed text-slate-500">
        dataOps partners with businesses to extract, organize, and deliver web data at scale. Whether you need one-time data pulls or ongoing automated pipelines, we handle the technical complexity so you can focus on what the data tells you.
      </p>
      <p class="text-lg leading-relaxed text-slate-500">
        We go beyond basic web scraping. Our team builds custom extraction and crawling solutions tailored to your specific sources, formats, and delivery requirements — serving companies across e-commerce, real estate, finance, research, and more.
      </p>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mx-auto max-w-4xl mt-16">
      {stats.map((stat) => (
        <div class="text-center">
          <div class="text-4xl font-bold text-gray-800">{stat.value}</div>
          <div class="text-sm text-slate-500 mt-1">{stat.label}</div>
        </div>
      ))}
    </div>

    <!-- What Sets Us Apart -->
    <div class="mx-auto max-w-4xl mt-24">
      <h2 class="font-bold text-3xl text-gray-800 text-center">
        What Sets Us Apart
      </h2>
      <p class="text-lg text-slate-500 mt-3 text-center max-w-2xl mx-auto">
        We're not a generic data vendor. We build custom solutions designed around your exact requirements.
      </p>

      <div class="grid md:grid-cols-2 gap-10 mt-12">
        <div class="p-6 border border-slate-200 rounded-lg">
          <h3 class="font-semibold text-lg text-gray-800">Hands-Off Service</h3>
          <p class="text-slate-500 mt-2 leading-relaxed">
            You tell us what data you need — we handle everything from source analysis and scraper development to data cleaning and delivery. No technical work on your end.
          </p>
        </div>
        <div class="p-6 border border-slate-200 rounded-lg">
          <h3 class="font-semibold text-lg text-gray-800">Built for Scale</h3>
          <p class="text-slate-500 mt-2 leading-relaxed">
            From hundreds of records to millions, our infrastructure adapts to your volume. We handle rate limiting, proxy rotation, and anti-bot measures behind the scenes.
          </p>
        </div>
        <div class="p-6 border border-slate-200 rounded-lg">
          <h3 class="font-semibold text-lg text-gray-800">Flexible Delivery</h3>
          <p class="text-slate-500 mt-2 leading-relaxed">
            CSV, JSON, databases, APIs — we deliver data in whatever format fits your workflow. One-time exports or recurring automated pipelines, your call.
          </p>
        </div>
        <div class="p-6 border border-slate-200 rounded-lg">
          <h3 class="font-semibold text-lg text-gray-800">Industry Experience</h3>
          <p class="text-slate-500 mt-2 leading-relaxed">
            We've worked with companies across e-commerce, real estate, finance, research, and technology — and understand the data challenges unique to each space.
          </p>
        </div>
      </div>
    </div>

    <!-- Values -->
    <div class="mx-auto max-w-4xl mt-24">
      <h2 class="font-bold text-3xl text-gray-800 text-center">
        Our Values
      </h2>

      <div class="grid sm:grid-cols-2 gap-12 mt-12">
        {values.map((item) => (
          <div class="flex gap-4 items-start">
            <div class="mt-1 bg-black rounded-full p-2 w-8 h-8 shrink-0">
              <Icon class="text-white" name={item.icon} />
            </div>
            <div>
              <h3 class="font-semibold text-lg">{item.title}</h3>
              <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA -->
    <div class="mt-24 mb-16 bg-black rounded-lg p-8 md:p-12 text-center">
      <h2 class="text-3xl font-bold text-white">See your data before you commit.</h2>
      <p class="text-lg text-gray-300 mt-3 max-w-xl mx-auto">
        Tell us the website and the data you need — we'll send you a free sample within 24 hours.
      </p>
      <a
        href="/contact"
        class="inline-block mt-6 px-8 py-3 bg-white text-black rounded-md font-medium hover:bg-gray-100 transition-colors">
        Get a Free Data Sample
      </a>
    </div>
  </Container>
</Layout>
