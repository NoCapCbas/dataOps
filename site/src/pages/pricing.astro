---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingCard from "@components/pricing.astro";

const pricing = [
  {
    name: "Starter",
    price: "Custom",
    popular: false,
    features: [
      "Single data source",
      "Up to 10,000 records",
      "CSV or JSON delivery",
      "One-time extraction",
      "Email support",
    ],
    button: {
      text: "Get a Quote",
      link: "/contact",
    },
  },
  {
    name: "Growth",
    price: "Custom",
    popular: true,
    features: [
      "Multiple data sources",
      "Up to 100,000 records",
      "Any data format",
      "Recurring delivery schedules",
      "Data pipeline setup",
      "Priority support",
    ],
    button: {
      text: "Get a Quote",
      link: "/contact",
    },
  },
  {
    name: "Enterprise",
    price: "Custom",
    popular: false,
    features: [
      "Unlimited data sources",
      "Unlimited records",
      "Custom data pipelines",
      "Automation & scheduling",
      "Dedicated account manager",
      "SLA & uptime guarantees",
    ],
    button: {
      text: "Contact Us",
      link: "/contact",
    },
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Pricing</Fragment>
      <Fragment slot="desc">
        Every project is unique. Tell us what you need and we'll build a plan that fits.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>

    <div class="mt-16 text-center max-w-2xl mx-auto">
      <h3 class="text-2xl font-bold text-gray-800">Not sure which plan is right for you?</h3>
      <p class="text-lg text-slate-500 mt-3">
        Reach out and our team will help you find the best solution for your data needs. We offer flexible pricing based on volume, complexity, and delivery frequency.
      </p>
      <a
        href="/contact"
        class="inline-block mt-6 px-8 py-3 bg-black text-white rounded-md font-medium hover:bg-gray-800 transition-colors">
        Schedule a Free Consultation
      </a>
    </div>
  </Container>
</Layout>
