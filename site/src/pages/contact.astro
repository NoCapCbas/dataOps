---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Get a Free Data Sample</Fragment>
      <Fragment slot="desc">Tell us the website and the data you need — we'll send you a sample within 24 hours.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">How it works</h2>

        <div class="mt-6 space-y-5">
          <div class="flex gap-3 items-start">
            <div class="mt-1 bg-black rounded-full p-2 w-8 h-8 shrink-0 flex items-center justify-center">
              <span class="text-white text-sm font-bold">1</span>
            </div>
            <div>
              <h3 class="font-semibold text-gray-800">You tell us the source</h3>
              <p class="text-slate-500 text-sm">Give us the website or platform you need data from.</p>
            </div>
          </div>
          <div class="flex gap-3 items-start">
            <div class="mt-1 bg-black rounded-full p-2 w-8 h-8 shrink-0 flex items-center justify-center">
              <span class="text-white text-sm font-bold">2</span>
            </div>
            <div>
              <h3 class="font-semibold text-gray-800">We build your scraper</h3>
              <p class="text-slate-500 text-sm">Our team sets up a custom extraction pipeline for your exact data needs.</p>
            </div>
          </div>
          <div class="flex gap-3 items-start">
            <div class="mt-1 bg-black rounded-full p-2 w-8 h-8 shrink-0 flex items-center justify-center">
              <span class="text-white text-sm font-bold">3</span>
            </div>
            <div>
              <h3 class="font-semibold text-gray-800">You get clean data on schedule</h3>
              <p class="text-slate-500 text-sm">CSV, JSON, API, database — delivered how and when you need it.</p>
            </div>
          </div>
        </div>

        <div class="mt-8 p-4 bg-slate-50 rounded-lg border border-slate-200">
          <p class="text-sm text-slate-600">
            <span class="font-semibold text-gray-800">No commitment.</span> We'll send you a free data sample so you can see the quality before deciding anything.
          </p>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
