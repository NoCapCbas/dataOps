---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Bring Your Own Source",
    description:
      "You provide the website or platform — we handle the rest. No technical setup required on your end.",
    icon: "bx:bxs-file-find",
  },
  {
    title: "Precise Data Extraction",
    description:
      "You get exactly the data you asked for — accurate, clean, and ready to use in your workflows.",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "On-Demand Delivery",
    description:
      "You decide when you need your data. One-time pulls or recurring schedules — it's your call.",
    icon: "bx:bxs-package",
  },
  {
    title: "Any Data Format",
    description:
      "You choose the format — CSV, JSON, Excel, database, or API. We deliver it the way that fits your stack.",
    icon: "bx:bxs-data",
  },
  {
    title: "Custom Solutions",
    description:
      "Your project is unique, and your solution should be too. We tailor every scraper and pipeline to your exact needs.",
    icon: "bx:bxs-file-find",
  },
  {
    title: "Dedicated Support",
    description:
      "You're never left guessing. Our team is here to guide you from kickoff to delivery — and beyond.",
    icon: "bx:bxs-user",
  },
];
---

<div class="mt-16 md:mt-0" id="features">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    You tell us what you need. We deliver.
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Stop wasting time building scrapers and fixing broken pipelines. Let dataOps handle your data extraction so you can focus on what matters — using the data.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
